<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hanime1" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:windowTranslucentStatus">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Hanime1.Main" parent="Theme.Hanime1">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Hanime1.Preview" parent="Theme.Hanime1">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Hanime1.About" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="RoundCornerImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>