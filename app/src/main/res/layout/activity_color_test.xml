<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:id="@+id/palettes_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Material 3 主题颜色"
            android:textSize="20sp"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Material 3 主题颜色 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="8">

            <!-- 主色系 -->
            <View android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"
                android:background="?attr/colorPrimary" android:layout_margin="2dp"/>
            <TextView android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"
                android:text="colorPrimary" android:textColor="?attr/colorOnPrimary"
                android:background="?attr/colorPrimary" android:gravity="center" android:layout_margin="2dp"/>

            <View android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"
                android:background="?attr/colorPrimaryContainer" android:layout_margin="2dp"/>
            <TextView android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"
                android:text="colorPrimaryContainer" android:textColor="?attr/colorOnPrimaryContainer"
                android:background="?attr/colorPrimaryContainer" android:gravity="center" android:layout_margin="2dp"/>

            <!-- 副色系 -->
            <View android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"
                android:background="?attr/colorSecondary" android:layout_margin="2dp"/>
            <TextView android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"
                android:text="colorSecondary" android:textColor="?attr/colorOnSecondary"
                android:background="?attr/colorSecondary" android:gravity="center" android:layout_margin="2dp"/>

            <View android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"
                android:background="?attr/colorSecondaryContainer" android:layout_margin="2dp"/>
            <TextView android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"
                android:text="colorSecondaryContainer" android:textColor="?attr/colorOnSecondaryContainer"
                android:background="?attr/colorSecondaryContainer" android:gravity="center" android:layout_margin="2dp"/>

            <!-- 第三色系 -->
            <View android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"
                android:background="?attr/colorTertiary" android:layout_margin="2dp"/>
            <TextView android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"
                android:text="colorTertiary" android:textColor="?attr/colorOnTertiary"
                android:background="?attr/colorTertiary" android:gravity="center" android:layout_margin="2dp"/>

            <View android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"
                android:background="?attr/colorTertiaryContainer" android:layout_margin="2dp"/>
            <TextView android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"
                android:text="colorTertiaryContainer" android:textColor="?attr/colorOnTertiaryContainer"
                android:background="?attr/colorTertiaryContainer" android:gravity="center" android:layout_margin="2dp"/>

            <!-- 背景和表面 -->
            <View android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"
                android:background="?attr/colorSurface" android:layout_margin="2dp"/>
            <TextView android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"
                android:text="colorSurface" android:textColor="?attr/colorOnSurface"
                android:background="?attr/colorSurface" android:gravity="center" android:layout_margin="2dp"/>

            <View android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"
                android:background="?attr/colorSurfaceVariant" android:layout_margin="2dp"/>
            <TextView android:layout_width="0dp" android:layout_height="60dp" android:layout_columnWeight="1"
                android:text="colorSurfaceVariant" android:textColor="?attr/colorOnSurfaceVariant"
                android:background="?attr/colorSurfaceVariant" android:gravity="center" android:layout_margin="2dp"/>
        </GridLayout>

        <!-- Monet 动态调色板 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monet 动态调色板 (12种)"
            android:textSize="20sp"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
    <!-- 在之前的布局末尾添加 -->

</ScrollView>
