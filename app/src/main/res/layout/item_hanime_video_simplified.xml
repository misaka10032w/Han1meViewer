<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardCornerRadius="12dp"
            app:cardElevation ="1dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                tools:ignore="UseCompoundDrawables, UselessParent">

                <FrameLayout
                    android:id="@+id/cover_wrapper"
                    android:layout_width="@dimen/video_cover_simplified_width"
                    android:layout_height="@dimen/video_cover_simplified_height">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        app:shapeAppearanceOverlay="@style/TopRoundCornerImageView" />

                    <ImageView
                        android:id="@+id/watched_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="6dp"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_baseline_check_circle_24"
                        android:background="@drawable/icon_circle_bg"
                        android:visibility="gone"
                        tools:visibility="visible"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:minLines="2"
                    android:paddingStart="8dp"
                    android:paddingEnd="4dp"
                    android:scrollbars="none"
                    android:textColor="?attr/colorOnSurface"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    tools:text="123123123abc, abc, abc" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

</layout>